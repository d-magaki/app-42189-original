<div class="user-list-wrapper">

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="page-title mb-0">ユーザー一覧</h1>
  </div>

  <div class="table-responsive">
    <table id="projects-table" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>社員ID</th>
          <th>氏名</th>
          <th>部署</th>
          <th>権限</th>
          <th>メール</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.employee_id %></td>
            <td><%= user.user_name %></td>
            <td><%= user.department.present? ? user.department : "未設定" %></td>
            <td><%= user.role == 1 ? "管理者" : "一般社員" %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to "編集", edit_user_path(user), class: "btn btn-outline-primary btn-sm me-2" %>
              <%= button_to "削除", user_path(user), method: :delete, data: { confirm: "本当に削除しますか？" }, form: { data: { turbo: false } }, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="actions mt-4 d-flex justify-content-end">
    <%= link_to "新規登録", new_user_path, class: "btn btn-success btn-lg" %>
  </div>

</div>
